{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/index.d.ts"]
}
