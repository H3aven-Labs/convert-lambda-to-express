{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "outDir": "./build",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  }
}
